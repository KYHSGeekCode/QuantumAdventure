<Application x:Class="Quantums_adventure.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Quantums_adventure"
            xmlns:infrastructure="clr-namespace:Quantums_adventure.Infrastructure" Startup="App_OnStartup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <infrastructure:CellToScreenConverter x:Key="CellToScreenConverter"/>

            <infrastructure:DirectionToMatrixConverter x:Key="DirectionToMatrixConverter"/>

            <infrastructure:TerrainTileConverter x:Key="TerrainTileConverter"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
